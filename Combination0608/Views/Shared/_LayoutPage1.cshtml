<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Creative - Bootstrap 3 Responsive Admin Template">
    <meta name="author" content="GeeksLabs">
    <meta name="keyword" content="Creative, Dashboard, Admin, Template, Theme, Bootstrap, Responsive, Retina, Minimal">
    <link rel="shortcut icon" href="~/img/favicon.ico"><!--標題圖檔-->

    <title>寶成國際-員工出勤管理系統</title>
    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="~/Content/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/style-responsive.css" rel="stylesheet" />
    <!--下拉式選單CSS-->
    <link href="~/Content/select2.min.css" rel="stylesheet" />
    <!--FancyBox-->
    <link rel="stylesheet" type="text/css" href="~/Content/FancyBox/jquery.fancybox.css" media="screen" />

    @RenderSection("style", false)
    <style>
        body {
            font-family:"微軟正黑體";
        }
    </style>
</head>

<body>
    <!-- container section start -->
    <section id="container" class="">
        <!--header start-->
        <header class="header dark-bg">
            <div class="toggle-nav">
                <div class="icon-reorder"><i class="icon_menu"></i></div>
            </div>

            <!--logo start-->
            <a href="~/Index/Index" class="logo">寶成國際 <span class="lite">員工關係管理系統</span></a>
            <!--logo end-->

            <div class="top-nav notification-row">
                <!-- notificatoin dropdown start-->
                <ul class="nav pull-right top-menu">
                    <li>
                        <p class="text-center" style="margin-top: 0.6em">
                            @{if (User.Identity.Name == null || User.Identity.Name == "")
                                {
                                    <a href="~/Login/Login">
                                        <span class="username" style="font-size:18px;vertical-align:central;">Guest</span>
                                    </a>
                                }
                                else
                                {
                                    <span class="username" style="font-size:18px;vertical-align:central;">你好，<strong>@Session["Name"].ToString()</strong></span>
                                }
                            }
                        </p>
                    </li>
                    <li>
                        @{if (User.Identity.Name == null || User.Identity.Name == "")
                            {
                                <a href="~/Login/Login">
                                    <span>登入</span>
                                </a>
                            }
                            else
                            {
                                <a href="~/Login/Logout">
                                    <span>登出</span>   
                                </a>
                            }

                        }

                    </li>

                <!-- user login dropdown end -->
            </ul>

                <!-- notificatoin dropdown end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu">
                    <li class="">
                        <a class="" href="~/Index/Index">
                            <i class="icon_house_alt"></i>
                            <span>首頁</span>
                        </a>
                    </li>
                    <li>
                        <a class="" href="~/Factory/Index">
                            <i class="icon_building"></i>
                            <span>廠別管理</span>
                        </a>
                    <li>
                        <a class="" href="~/PMC/PMSTART">
                            <i class="icon_group"></i>
                            <span>人員管理</span>
                        </a>
                    </li>
                    <li>
                        <a class="" href="~/AttM/Index">
                            <i class="icon_documents_alt"></i>
                            <span>出勤人數維護</span>
                        </a>
                    </li>
                    <li>
                        <a class="" href="~/AttE/Index">
                            <i class="icon_table"></i>
                            <span>出勤統計報表</span>
                        </a>
                    </li>
                    <li>
                        <a class="" href="~/AttS/Index">
                            <i class="icon_mail_alt"></i>
                            <span>出勤維護通知排程</span>
                        </a>
                    </li>

                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>

        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <!-- page start-->
                @RenderBody()

                <!-- page end-->
            </section>
        </section>
        <!--main content end-->
    </section>
    <!-- container section end -->
    <!-- javascripts -->
    <script src="~/scripts/jquery-1.12.3.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <!-- nicescroll -->
    <script src="~/scripts/jquery.scrollTo.min.js"></script>
    <script src="~/scripts/jquery.nicescroll.js" type="text/javascript"></script>
    <!--custome script for all page-->
    <script src="~/scripts/scripts.js"></script>
    <script src="~/scripts/select2.min.js"></script>
    <!--FancyBox-->
    <script type="text/javascript" src="~/scripts/jquery.mousewheel-3.0.6.pack.js"></script>
    <script type="text/javascript" src="~/scripts/jquery.fancybox.js"></script>
    <script type="text/javascript" src="~/scripts/jquery.fancybox.pack.js"></script>
    <!--CKeditor-->
    <script type="text/javascript" src="~/ckeditor/ckeditor.js"></script>
    @RenderSection("Scripts", false)

</body>
</html>
