<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="~/Content/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/style-responsive.css" rel="stylesheet" />
    <!--下拉式選單CSS-->
    <link href="~/Content/select2.min.css" rel="stylesheet" />
    <!--FancyBox-->
    <link rel="stylesheet" type="text/css" href="~/Content/FancyBox/jquery.fancybox.css" media="screen" />
    @RenderSection("style", false)
</head>
<body>
    <div>
        @RenderBody()
    </div>
    <script src="~/scripts/jquery-1.12.3.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <!-- nicescroll -->
    <script src="~/scripts/jquery.scrollTo.min.js"></script>
    <script src="~/scripts/jquery.nicescroll.js" type="text/javascript"></script>
    <!--custome script for all page-->
    <script src="~/scripts/scripts.js"></script>
    <script src="~/scripts/select2.min.js"></script>
    <!--FancyBox-->
    <script type="text/javascript" src="~/scripts/jquery.mousewheel-3.0.6.pack.js"></script>
    <script type="text/javascript" src="~/scripts/jquery.fancybox.js"></script>
    <script type="text/javascript" src="~/scripts/jquery.fancybox.pack.js"></script>
    <!--CKeditor-->
    <script type="text/javascript" src="~/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="~/scripts/jquery.flot.min.js"></script>
    <script type="text/javascript" src="~/scripts/jquery.flot.canvas.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>